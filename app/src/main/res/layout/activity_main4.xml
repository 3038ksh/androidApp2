<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kimsoohyeong.week2.Main4Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="피자(15000원)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="0.36" />

        <EditText
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="개수 입력"
            android:ems="10"
            android:id="@+id/e1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="스파게티(13000원)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="0.36" />

        <EditText
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="개수 입력"
            android:ems="10"
            android:id="@+id/e2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="샐러드(9000원)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.36" />

        <EditText
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="개수 입력"
            android:ems="10"
            android:id="@+id/e3" />
    </LinearLayout>

    <CheckBox
        android:text="멤버쉽 카드 있음(10%할인)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c1" />

    <Button
        android:text="금액 계산하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="주문개수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="1" />

        <TextView
            android:text="0개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t1"
            android:layout_weight="0.56"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="주문금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1" />

        <TextView
            android:text="0원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            android:layout_weight="0.56"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</LinearLayout>
